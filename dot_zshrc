alias chez='chezmoi'
alias ls='eza --icons --git'
alias lsa='eza -a --icons --git'
alias ll='eza -ahl --icons --git'
alias lt='eza -T -L 3 -a --icons -I "node_modules|.git|.cache"'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ga='git add'
alias gb='git branch'
alias gcm='git commit'
alias gcma='git commit --amend'
alias gf='git fetch'
alias gs='git switch'
alias gr='git restore'
alias grb='git rebase'
alias grt='cd "$(git rev-parse --show-toplevel || echo .)"'
alias gst='git status'
alias gpr='gh prs'
alias gl='git l'
alias gpl='git pull'
alias k='kubectl'
alias kx='kubectx'
alias kn='kubens'
alias d='docker'
alias dc='docker compose'
alias tf='terraform'
alias grep='rg -i'
alias mysql='mycli'
alias gcc='gcc -Wall'
