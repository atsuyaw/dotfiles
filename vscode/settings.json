{
  // file exclusion pattern
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/.vscode": true,
    "**/.terraform": true,
    "**/.__pycache__": true
  },

  // editor general settings
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.renderControlCharacters": true,
  "editor.fontSize": 13,
  "workbench.editor.enablePreview": false,
  "files.insertFinalNewline": true,
  "explorer.autoReveal": false,
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnSave": true,

  // C, C++
  "C_Cpp.clang_format_style": "{BasedOnStyle: Google, IndentWidth: 4}",

  // go
  "go.formatTool": "goimports",

  // python
  "python.formatting.provider": "black",
  "python.formatting.autopep8Path": "",
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,

  // javascript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.singleQuote": true,

  // typescript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // markdown
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "prettier.disableLanguages": ["markdown"],

  // yaml
  "[yaml]": {
    "editor.formatOnSave": false
  },

  // html
  "html.format.enable": false,

  // rust
  "[rust]": {
    "editor.defaultFormatter": "matklad.rust-analyzer"
  },
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust.clippy_preference": "on",

  // terraform
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": true
    }
  },

  // liveshare
  "liveshare.authenticationProvider": "GitHub",
  
  // copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": false
  },

  // git commit template
  "vscodeGitCommit.template": ["{scope}: {message}"],
  "vscodeGitCommit.variables": {
    "prefix": "keke",
    "scope": [
      {
        "label": "add",
        "detail": "Select when adding new files"
      },
      {
        "label": "remove",
        "detail": "Select when removing some files"
      },
      {
        "label": "upgrade",
        "detail": "Select when upgrading libraries"
      },
      {
        "label": "feat",
        "detail": "Select when creating new things"
      },
      {
        "label": "fix",
        "detail": "Select when fixing a bug"
      },
      {
        "label": "test",
        "detail": "Select when adding or editing tests"
      },
      {
        "label": "chore",
        "detail": "Select when concerning build change or external dependencies"
      },
      {
        "label": "refactor",
        "detail": "Select when no new performances or no new functionnality"
      },
      {
        "label": "style",
        "detail": "Select when working on code style"
      },
      {
        "label": "docs",
        "detail": "Select when editing documentation"
      },
      {
        "label": "ci",
        "detail": "Select when editing CI sctiprs"
      },
      {
        "label": "perf",
        "detail": "Select when working on performances"
      }
    ]
  }
}
